<% content_for(:title, "List | To Do") %>

<h1><%= @list.name %></h1>

<% if @list.tasks.any? %>
  <h4>Here are the tasks for this list:</h4>

  <h3>Tasks</h3>
    <%= render "task_list", :chunk => Task.not_done %>
  <h3>Complete Tasks</h3>
    <%= render "task_list", :chunk => Task.done %>

<% else %>
  <p>There are no tasks yet!</p>
<% end %>

<p><%= link_to "Add a task", new_list_task_path(@list) %></p>
<p><%= link_to "Delete", list_path(@list), :data => {
  :confirm => "You sure?",
  :method => "delete"
} %></p>

<p><%= link_to "Return to lists", lists_path %></p>
